{
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Unit Tests",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/jest",
            "args": [
                "${fileBasenameNoExtension}",
                "--runInBand",
                "--watch",
                "--coverage=false",
                "--no-cache"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "envFile": "${workspaceRoot}/.env"
        }
    ]
}
